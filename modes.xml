<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- nhi → nhn -->

  <mode name="nhi-nhn" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="nhi-nhn.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="nhi-nhn.rlx.bin"/>
      </program>
      <program name="apertium-tagger -u 2 -g $2">
        <file name="nhi-nhn.prob"/>
      </program>
      <program name="lsx-proc">
        <file name="nhi-nhn.autoseq.bin"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="nhi-nhn.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="nhi-nhn.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-nhi-nhn.nhi-nhn.t1x"/>
        <file name="nhi-nhn.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-nhi-nhn.nhi-nhn.t2x"/>
        <file name="nhi-nhn.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-nhi-nhn.nhi-nhn.t3x"/>
        <file name="nhi-nhn.t3x.bin"/>
      </program>
      <program name="lsx-proc" debug-suff="revautoseq">
        <file name="nhi-nhn.revautoseq.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="nhi-nhn.autogen.bin"/>
      </program>

    </pipeline>
  </mode>

